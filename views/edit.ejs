  <body>
    <!-- navbar -->
    <%- include('nav.html')%>
    <h1>수정하기</h1>
    <form action="/edit?_method=PUT" method="POST" id="form-container" style="width: 600px; margin: 100px auto;">
        <div class="form-group">
          <label for="todo">할일</label>
          <input type="text" class="form-control" id="todo" name="title" value="<%= data.title %>">
          <input type="hidden" class="form-control" id="todo" name="id" value="<%= data.id %>">
        </div>
        <div class="form-group">
          <label for="date">Due date</label>
          <input type="text" class="form-control" id="date" name="date" value="<%= data.date %>">
        </div>
        <button type="submit" class="btn btn-danger">submit</button>
    
      </form>


    <script
      src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
      integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
